<% content_for(:html_title) { 'Myごはん-マイページ' } %>


<div class="show container">
<div class="show4">
 <p class="show1 text-white bg-dark">ユーザー情報</p>

 <p class="show2">ユーザ名</p>
 <p class="show3"><%= @user.name %></p>
 
  <p>
　<%= link_to "いいね一覧(#{@user.likes.count})", likes_user_path(@user), class: "nav-link" %>
  </p>
  
 <% if current_user?(@user) %>
 <p><%= link_to("編集ページへ","/users/#{@user.id}/edit") %></p>
 <% end %>
 
 <% if admin_user? || current_user?(@user)%>
 
 <p><%= link_to "ユーザー削除", @user, method: :delete,
                                data: { confirm: "ユーザーを削除しますか?" } %></p>
 <% end %>
 
 </div>
 <p class="show-top"><%= link_to("トップに戻る",root_url)%></p>
 </div>
 
    
  <div class="microposts">
    <% if @user.microposts.any? %>
      
      
       <ol class="micro">
         <%= link_to "新規投稿!",new_micropost_path , class:"btn page-link text-dark d-inline-block fas fa-pen" %></p>
          <%= page_entries_info @microposts%>
          <%=paginate @microposts %>
          <%= render @microposts %>
          <%=paginate @microposts %>
      </ol>
    <% end %>
  </div>
    


  